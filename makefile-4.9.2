OPT = -O3

all: test.c libmap.a
	g++ $(OPT) test.c libmap.a -o test

gtest: gtest.o libmap.a tree_unittests.o hash_unittests.o
	g++ gtest.o tree_unittests.o hash_unittests.o libmap.a -pthread -lgtest -o gtest 


gtest.o: gtest.cpp header.h
	g++ $(OPT) gtest.cpp -c -o gtest.o

tree_unittests.o: tree_unittests.c
	g++ $(OPT) tree_unittests.c -c -o tree_unittests.o

hash_unittests.o: hash_unittests.c
	g++ $(OPT) hash_unittests.c -c -o hash_unittests.o



libcore.o: libcore.c header.h
	g++ $(OPT) libcore.c -c -o libcore.o
ee.o: avl_tree.c header.h
	g++ $(OPT) avl_tree.c -c -o avl_tree.o

hash_table.o: hash_table.c header.h
	g++ $(OPT) hash_table.c -c -o hash_table.o

libmap.a: libcore.o avl_tree.o hash_table.o
	ar -cr libmap.a libcore.o avl_tree.o hash_table.o



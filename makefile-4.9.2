OPT = -Wall -O3 -std=c++11

all: test.c libset.a
	g++ $(OPT) test.c libset.a -o test

gtest: gtest.cpp header.h
	g++ $(OPT) gtest.cpp libset.a -pthread -lgtest -o gtest 

libcore.o: libcore.c header.h
	g++ $(OPT) libcore.c -c -o libcore.o

avl_tree.o: avl_tree.c header.h
	g++ $(OPT) avl_tree.c -c -o avl_tree.o

hash_table.o: hash_table.c header.h
	g++ $(OPT) hash_table.c -c -o hash_table.o

libset.a: libcore.o avl_tree.o hash_table.o
	ar -cr libset.a libcore.o avl_tree.o hash_table.o


